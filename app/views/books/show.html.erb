<h1><%= @book.title %></h1>

<p><%= @book.author %> - <%= @book.year %></p><br>

<p><%= @book.description %></p><br>

<p><%= @book.category %></p>


<h2>Add a Review</h2>

<br><br>

<ul>
  <% @book.reviews.order(created_at: :desc).each do |review| %>
    <li><%= review.rating %> - <%= review.body %><br>
        <%= review.created_at %></li>
  <% end %>
</ul>



<%= simple_form_for [@book, @review] do |f| %>

  <%= f.input :rating, collection: 1..5 %>
  <%= f.input :body %>

  <%= f.button :submit %>
<% end %>

<%= link_to 'Back to Books', books_path %>
